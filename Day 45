#include <stdio.h>
int main() {
    int N, M;
    
    // Input the values of N and M
    printf("Enter the number of friends (N): ");
    scanf("%d", &N);
    printf("Enter the number of left shoes Chef already has (M): ");
    scanf("%d", &M);

    // Calculate the minimum number of extra shoes needed
    int extra_shoes = (N * 2) - M;

    // Make sure extra_shoes is non-negative
    if (extra_shoes < 0) {
        extra_shoes = 0;
    }

    // Output the result
    printf("Chef needs to buy at least %d extra shoes.\n", extra_shoes);

    return 0;
}
